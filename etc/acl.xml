<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                    <resource id="Codilar_PushNotification::menu" title="Codilar Push Notification Menu" sortOrder="90">
                        <resource id="Codilar_PushNotification::PushNotification" title="Codilar Push Notification Configuration" sortOrder="90"/>
                        <resource id="Codilar_PushNotification::customer" title="Codilar Push Notification Registered Customer" sortOrder="90">
                            <resource id="Codilar_PushNotification::registered_customer" title="Codilar Push Notification Customer Grid" sortOrder="90"/>
                            <resource id="Codilar_PushNotification::pushnotify_template" title="Codilar Push Notification Template Grid" sortOrder="90"/>
                            <resource id="Codilar_PushNotification::pushnotify_order_template" title="Codilar Push Notification Order Template Grid" sortOrder="90"/>
                        </resource>
                    </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                                <resource id="Codilar_PushNotification::configuration" title="Codilar Push Notification Configuration" sortOrder="120"/>
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
